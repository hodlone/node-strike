{
   "compilerOptions": {
      "lib": ["es2020"],
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "inlineSources": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   }
}